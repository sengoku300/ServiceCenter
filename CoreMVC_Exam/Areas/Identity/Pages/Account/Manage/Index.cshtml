@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    h1 {
        color: #25b7d3;
    }

    .main_img {
        border: 3px solid transparent; /* Прозрачная рамка */
        width: 300px;
        height: 300px;
    }

        .main_img:hover {
            border: 3px solid #25b7d3; /* Цветная рамка */
        }
</style>

<h1>Моя страница!</h1>


<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <a href="@Model.Input.PhotoPath" target="_blank">
                    <label asp-for="Input.Picture" class="cols-sm-2 control-label">Текущее Фото</label>
                    <img class="main_img" src="@Model.Input.PhotoPath" />
                </a>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Input.Picture" class="cols-sm-2 control-label">Picture</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-picture-o" aria-hidden="true"></i></span>
                            <input type="file" class="form-control" asp-for="Input.Picture" />
                        </div>
                    </div>
                    <span asp-validation-for="Input.Picture" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Input.Passport"></label>
                <input asp-for="Input.Passport" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Birthday" class="cols-sm-2 control-label">Birthday</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
                        <input class="form-control" asp-for="Input.Birthday" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                    </div>
                </div>
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button style="background-color: #fa5554; border-color: #fa5554; margin: 20px;" id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}