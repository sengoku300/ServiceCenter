@model CoreMVC_Exam.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить заказ?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dt class="col-sm-10">
            @Model.Client.FirstName @Model.Client.LastName
        </dt>
        @if (Model.Master != null)
        {
        <dt class = "col-sm-2">
            Мастер
        </dt> 
        <dt class="col-sm-10">
            @Model.Master.FirstName @Model.Master.LastName
        </dt>
        }
        <dt class = "col-sm-2">
            Товар
        </dt> 
        <dt class="col-sm-10">
            @Model.Product.Brand  @Model.Product.Model
        </dt>
        <dt class = "col-sm-2">
            Категория
        </dt>
        <dt class="col-sm-10">
            @Model.Product.Category.Name
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
