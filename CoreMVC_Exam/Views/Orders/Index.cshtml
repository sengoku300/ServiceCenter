@model CoreMVC_Exam.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .table {
        width: 100%;
        border: none;
        margin-bottom: 20px;
        border-collapse: separate;
    }

        .table thead th {
            font-weight: bold;
            text-align: left;
            border: none;
            padding: 10px 15px;
            color: white;
            background: #25b7d3;
            font-size: 14px;
            border-top: 1px solid #ddd;
        }

        .table tr th:first-child, .table tr td:first-child {
            border-left: 1px solid #ddd;
        }

        .table tr th:last-child, .table tr td:last-child {
            border-right: 1px solid #ddd;
        }

        .table thead tr th:first-child {
            border-radius: 20px 0 0 0;
        }

        .table thead tr th:last-child {
            border-radius: 0 20px 0 0;
        }

        .table tbody td {
            text-align: left;
            border: none;
            padding: 10px 15px;
            font-size: 14px;
            vertical-align: top;
        }

        .table tbody tr:nth-child(even) {
            background: #25b7d3;
            color: white;
        }

        .table tbody tr:last-child td {
            border-bottom: 1px solid #ddd;
        }

            .table tbody tr:last-child td:first-child {
                border-radius: 0 0 0 20px;
            }

            .table tbody tr:last-child td:last-child {
                border-radius: 0 0 20px 0;
            }
</style>

<h1>Заработанные деньги: <strong style="text-decoration: solid;">@Model.EarnedMoney</strong> </h1>

<hr/>

<h1>Заказы в процессе/законченные:</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Мастер
            </th>
            <th>
                Клиент
            </th>
            <th>
                Продукт
            </th>
            <th>
                Категория
            </th>
            <th>
                Дата начало работы
            </th>
            <th>
                Дата конца работы
            </th>
            <th>
                Стоимость
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.OrdersProccess.Count > 0)
        {
            @foreach (var item in Model.OrdersProccess)
            {
                <tr>
                    <td>
                        @item.Master.FirstName @item.Master.LastName
                    </td>
                    <td>
                        @if (item.Client != null)
                        {
                            @item.Client.FirstName  @item.Client.LastName
                        }
                    </td>
                    <td>
                        @item.Product.Brand @item.Product.Model
                    </td>
                    <td>
                        @item.Product.Category.Name
                    </td>
                    <td>
                        @item.DateTimeStart
                    </td>
                    <td>
                        @item.DateTimeEnd
                    </td>
                    <td>
                        @item.Price
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<hr />

<br />

<h1>Ожидающие заказы:</h1>

    <table id="Orders"  class="table">
        <thead>
            <tr>
                <th>
                    Клиент
                </th>
                <th>
                    Продукт
                </th>
                <th>
                    Категория
                </th>
                <th>
                    Цена продукта
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrdersPending)
            {
                <tr>
                    <td>
                        @if (item.Client != null)
                        {
                            @item.Client.FirstName  @item.Client.LastName
                        }
                    </td>
                    <td>
                        @item.Product.Brand @item.Product.Model
                    </td>
                    <td>
                        @item.Product.Category.Name
                    </td>
                    <td>
                        @item.Product.Price
                    </td>
                    <td>
                        <a asp-action="Accept" asp-controller="Orders" asp-route-id="@item.ID">Accept</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <p><h1><strong>Мои заказы:</strong></h1></p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Клиент
                    </th>
                    <th>
                        Продукт
                    </th>
                    <th>
                        Категория
                    </th>
                    <th>
                        Дата начала работы
                    </th>
                    <th>
                        Дата конца работы
                    </th>
                    <th>
                        Стоимость
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OrdersMy.Count > 0)
                {
                    @foreach (var item in Model.OrdersMy)
                    {
                        <tr>
                            <td>
                                @if (item.Client != null)
                                {
                                    @item.Client.FirstName  @item.Client.LastName
                                }
                                </td>
                            <td>
                                @item.Product.Brand @item.Product.Model
                            </td>
                            <td>
                                @item.Product.Category.Name
                            </td>
                            <td>
                                @item.DateTimeStart
                            </td>
                            <td>
                                @item.DateTimeEnd
                            </td>
                            <td>
                                @item.Price
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
